<resources>

    <style name="BaseBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
    </style>

    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="BaseBottomSheetDialog" />

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyTheme.BottomSheet</item>
    </style>

    <style name="ThemeOverlay.MyTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.AlertDialog</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.MyTheme.Title.Text
        </item>
    </style>

    <style name="MaterialAlertDialog.MyTheme.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.MyTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface" />

    <style name="Widget.LuxuryProgressBar" parent="">
        <item name="progressColor">@color/color_on_surface</item>
    </style>

    <style name="Widget.MyTheme.GameView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.MyTheme.CompoundButton.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton"></style>

    <style name="Widget.MyTheme.GameDetailsHeadline" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
    </style>

    <style name="Widget.MyTheme.MetacriticScoreTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/background_metacritic_score</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Widget.MyTheme.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/btn_stroke_color_selector</item>
    </style>

    <style name="Widget.MyTheme.CompoundButton.RadioButton.Dialog">
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.MyTheme.GameDetailsPlatformIcon" parent="">
        <item name="android:layout_width">@dimen/game_details_platform_icon_size</item>
        <item name="android:layout_height">@dimen/game_details_platform_icon_size</item>
        <item name="android:tint">@color/platforms_icon_tint</item>
    </style>

    <style name="GameDetailsItem">
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
    </style>
</resources>
