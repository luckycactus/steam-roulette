<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_activity_margin"
        android:paddingBottom="@dimen/default_activity_margin"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roulette_game_time_filter_title"
            android:paddingLeft="@dimen/default_activity_margin"
            android:paddingRight="@dimen/default_activity_margin"
            android:paddingBottom="16dp"
            />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGameTimeFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

</LinearLayout>