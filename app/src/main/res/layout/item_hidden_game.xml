<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:stateListAnimator="@drawable/hidden_games_bottom_card_view_animator"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ru.luckycactus.steamroulette.presentation.ui.widget.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stateListAnimator="@drawable/hidden_games_state_list_animator"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.33"
        app:textSize="@dimen/game_view_details_text_size"
        />

    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        android:scaleX="0"
        android:scaleY="0"
        android:stateListAnimator="@drawable/hidden_games_checkbox_state_list_animator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:srcCompat="@drawable/circle_check_white_on_primary"
        tools:scaleX="1"
        tools:scaleY="1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>