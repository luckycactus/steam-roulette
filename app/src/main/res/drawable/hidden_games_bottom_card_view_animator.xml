<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <set>
            <objectAnimator android:duration="0" android:propertyName="alpha" android:valueTo="1" android:valueType="floatType" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:delay="200" android:propertyName="alpha" android:valueTo="0" android:valueType="floatType" />
        </set>
    </item>

</selector>